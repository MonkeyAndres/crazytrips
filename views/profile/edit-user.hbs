<link rel="stylesheet" href="/stylesheets/auth.css">

<div class="form-container">
    <h2>Edit User</h2>
    <p>Fill only the fields you want to change.</p>

    <form action="/profile/edit-user" method="POST" id="form-container" enctype="multipart/form-data">
        <label for="name">Name</label>
        <input id="name" type="text" name="name" value="{{user.name}}">
        <br>
        <label for="surname">Surname</label>
        <input id="surname" type="text" name="surname" value="{{user.surname}}">
        <br>
        <label for="age">Age (min 18yo)</label>
        <input type="number" name="age" min="18" value="{{user.age}}">
        <br>
        <label for="telephone">Telephone</label>
        <input type="tel" name="telephone" value="{{user.telephone}}" placeholder="Telephone Number">
        <br>
        <label for="biography">Biography</label>
        <br>
        <textarea name="bio" rows="10" cols="70" placeholder="Write your biography">{{user.bio}}</textarea>
        <br>
        <label for="photo">Profile photo</label>
        <input type="file" name="photo" style="background-color: transparent">

        {{#if message }}
        <br><div class="error-message">{{ message }}</div>
        {{/if}}

        <br>
        <button>Edit profile</button>
        <br>
        <a href="/profile/edit-password">Change your password</a>
    </form>
</div>