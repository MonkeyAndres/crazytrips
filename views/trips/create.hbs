<div class="form-container">
    <h2>{{operation}} trip</h2>
    <form action="/trips/{{operation}}/{{trip._id}}" method="POST">
        <label for="title">Titulo: </label>
        <input type="text" name="title" value="{{trip.title}}">
        <br>
        {{#unless trip._id}}
        <label for="destination">Destino: </label>
        <select name="destination">
            {{#each countries}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
        </select>
        <br>
        {{/unless}}
     <div class="error-message">{{ message }}</div>

        <label for="price">Precio: </label>
        <input type="text" name="price" value="{{trip.price}}">
        <br>

        <textarea name="description" id="editor">{{trip.description}}</textarea>
        <br>

        <label for="maxTravelers">Maximo viajeros: </label>
        <input type="number" name="maxTravelers" value="{{trip.maxTravelers}}">
        <br>

        <label for="startDate">Fecha Inicio: </label>
        <input type="date" name="startDate" value="{{trip.startDate}}">
        <br>

        <label for="endDate">Fecha Fin: </label>
        <input type="date" name="endDate" value="{{trip.endDate}}">
        <br>

        <button>{{operation}}</button>
    </form>
</div>

