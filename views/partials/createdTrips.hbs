<div class="title">
    <h2>Created Trips</h2>
    {{#if yourProfile}}
    <a href="/trips/create">Create Trip</a>
    {{/if}}
</div>

<div class="tripContainer">
    {{#each createdTrips}}
    <article>
        <h3>
            <a href="/trips/{{_id}}">{{title}}</a>
        </h3>
        <p>
            <i>Destination:</i> {{destination}}</p>
        <p>
            <i>Price:</i> {{price}}â‚¬</p>
        <p>
            <i>Dates:</i> {{startDate}} - {{endDate}}</p>
        {{#if status}}
        <p class="red">Status: Unavalible</p>
        {{else}}
        <p class="green">Status: Avalible</p>
        {{/if}} {{#if ../yourProfile}}
        <p style="text-align: right">
            <a href="/trips/delete/{{_id}}">Remove Trip</a>
            <a href="#"> - </a>
            <a href="/trips/edit/{{_id}}">Edit Trip</a>
        </p>
        <p style="text-align: right">
            <a href="/requests/eval/{{_id}}">Evalue Requests</a>
        </p>
        {{/if}}
    </article>
    {{/each}}
</div>