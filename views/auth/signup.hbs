<link rel="stylesheet" href="/stylesheets/auth.css">

<div class="form-container">
  <h2>Signup</h2>

  <form action="/auth/signup" method="POST" id="form-container">
    {{#if message }}
      <div class="error-message">{{ message }}</div>
    {{/if}}
    <label for="username">Username</label>
    <input id="username" type="text" name="username" placeholder="User name">
    <br>
    <label for="password">Password</label>
    <input id="password" type="password" name="password" placeholder="Your password">
    <br>
    <label for="passwordConfirm">Password confirm</label>
    <input id="passwordConfirm" type="password" name="passwordConfirm" placeholder="Repeat password">
    <br>
    <label for="email">Email</label>
    <input id="email" type="email" name="email" placeholder="Your email">
    <br>
    <label for="name">Name</label>
    <input id="name" type="text" name="name" placeholder="Name">
    <br>
    <label for="surname">Surname</label>
    <input id="surname" type="text" name="surname" placeholder="Surname">
    <br>
    <label for="sex">Sex</label>
    <input type="radio" name="sex" value="male"> Male
    <input type="radio" name="sex" value="female"> Female
    <br>
    <label for="age">Age (min 18yo)</label>
    <input type="number" name="age" min="18" placeholder="Age">
    <br>
    
    <button>Create account</button>
  </form>